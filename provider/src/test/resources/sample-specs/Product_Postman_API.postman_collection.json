	"item": [
		{
			"name": "Add a new product",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('post:/internal/products [code: 200] schema is valid', function () {",
							"    if (pm.response.code !== 200){",
							"        return;",
							"    }",
							"    const response = pm.response.json();",
							"    pm.expect(response.name).to.eql(\"valid product\");",
							"});",
							"pm.test('<PDT TEST> post:/internal/products [code: 400] schema is valid', function () {",
							"    if (pm.response.code !== 400){",
							"        return;",
							"    }",
							"    pm.response.to.have.status(400).to.be.true;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"invalid product\",\n    \"price\": 1\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/internal/products",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"internal",
						"products"
					]
				},
				"description": "Add a new product"
			},
